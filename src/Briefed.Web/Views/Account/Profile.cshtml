@model Briefed.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "Account Profile";
}

<style>
    /* Dark mode support */
    [data-theme="dark"] .card {
        background-color: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        color: #e9ecef;
    }
    
    [data-theme="dark"] .card-header {
        background-color: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.1);
        color: #f8f9fa;
    }
    
    [data-theme="dark"] .card-body,
    [data-theme="dark"] .card-body strong,
    [data-theme="dark"] .form-label,
    [data-theme="dark"] .form-text {
        color: #e9ecef !important;
    }
    
    [data-theme="dark"] h2,
    [data-theme="dark"] h5,
    [data-theme="dark"] h6 {
        color: #f8f9fa !important;
    }
    
    [data-theme="dark"] .card.border-danger {
        border-color: rgba(220, 53, 69, 0.5) !important;
    }
    
    [data-theme="dark"] .card.border-danger .card-body ul,
    [data-theme="dark"] .card.border-danger .card-body li {
        color: #e9ecef !important;
    }
    
    [data-theme="dark"] .text-muted {
        color: #adb5bd !important;
    }
    
    /* Fallback for prefers-color-scheme */
    @@media (prefers-color-scheme: dark) {
        .card {
            background-color: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
            color: #e9ecef;
        }
        
        .card-header {
            background-color: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.1);
            color: #f8f9fa;
        }
        
        .card-body,
        .card-body strong,
        .form-label,
        .form-text {
            color: #e9ecef !important;
        }
        
        h2,
        h5,
        h6 {
            color: #f8f9fa !important;
        }
        
        .card.border-danger {
            border-color: rgba(220, 53, 69, 0.5) !important;
        }
        
        .card.border-danger .card-body ul,
        .card.border-danger .card-body li {
            color: #e9ecef !important;
        }
        
        .text-muted {
            color: #adb5bd !important;
        }
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="mb-4">üë§ Account Profile</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Account Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üìß Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Email:</strong></div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Member Since:</strong></div>
                        <div class="col-sm-8">@Model.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Subscribed Feeds:</strong></div>
                        <div class="col-sm-8">@Model.FeedCount</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4"><strong>Saved Articles:</strong></div>
                        <div class="col-sm-8">@Model.SavedArticlesCount</div>
                    </div>
                </div>
            </div>

            <!-- Change Password -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üîí Change Password</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="CurrentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="NewPassword" name="NewPassword" required minlength="6">
                            <div class="form-text">Must be at least 6 characters with uppercase, lowercase, and digit.</div>
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </form>
                </div>
            </div>

            <!-- Delete Account -->
            <div class="card border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">‚ö†Ô∏è Danger Zone</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Delete Account</h6>
                    <p class="card-text text-muted">
                        Once you delete your account, there is no going back. All your data will be permanently removed:
                    </p>
                    <ul class="text-muted small">
                        <li>All feed subscriptions</li>
                        <li>Reading history</li>
                        <li>Saved articles</li>
                        <li>Account preferences</li>
                    </ul>
                    
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        Delete My Account
                    </button>
                </div>
            </div>

            <div class="mb-4">
                <a asp-controller="Articles" asp-action="Index" class="btn btn-secondary">‚Üê Back to Articles</a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Confirmation Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteAccountModalLabel">‚ö†Ô∏è Confirm Account Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="DeleteMyAccount" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>
                    <p>All your data will be permanently deleted:</p>
                    <ul>
                        <li>Account information</li>
                        <li>All feed subscriptions (@Model.FeedCount feeds)</li>
                        <li>All saved articles (@Model.SavedArticlesCount articles)</li>
                        <li>Reading history and preferences</li>
                    </ul>
                    <hr>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label"><strong>Enter your password to confirm:</strong></label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Enter your password">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                        <label class="form-check-label" for="confirmDelete">
                            I understand that this action is permanent and cannot be undone
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Permanently Delete Account</button>
                </div>
            </form>
        </div>
    </div>
</div>
