@model List<Briefed.Core.Models.TrendingArticle>
@{
    ViewData["Title"] = "Trending World News";
    var category = ViewBag.Category as string;
    var country = ViewBag.Country as string;
    var categories = ViewBag.Categories as string[] ?? Array.Empty<string>();
    var countries = ViewBag.Countries as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2>üî• Trending World News</h2>
        <div class="d-flex gap-2 flex-wrap">
            <div class="btn-group" role="group" aria-label="Country filter">
                @foreach (var kvp in countries)
                {
                    <a href="@Url.Action("Trending", new { category = category, country = string.IsNullOrEmpty(kvp.Key) ? null : kvp.Key })" 
                       class="btn btn-sm @(kvp.Key == (country ?? "") ? "btn-success" : "btn-outline-success")">
                        @kvp.Value
                    </a>
                }
            </div>
            <div class="btn-group" role="group" aria-label="Category filter">
                @foreach (var cat in categories)
                {
                    <a href="@Url.Action("Trending", new { category = cat, country = country })" 
                       class="btn btn-sm @(cat == category ? "btn-primary" : "btn-outline-primary")">
                        @cat.ToUpper()
                    </a>
                }
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <h4 class="alert-heading">‚ÑπÔ∏è GNews API Key Required</h4>
            <p>To view trending world news, you need to add your GNews API key to the configuration.</p>
            <hr>
            <p class="mb-0">
                <strong>Steps:</strong>
            </p>
            <ol>
                <li>Get a free API key at <a href="https://gnews.io/" target="_blank" class="alert-link">gnews.io</a></li>
                <li>Add to <code>appsettings.json</code>: <code>"GNews": { "ApiKey": "your-key-here" }</code></li>
                <li>Or set environment variable: <code>GNews__ApiKey=your-key-here</code></li>
                <li>Restart the application</li>
            </ol>
            <p class="mb-0 mt-2"><small>Free tier includes 100 requests per day with access to news from 150+ countries in 60+ languages</small></p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(article.ImageUrl))
                        {
                            <img src="@article.ImageUrl" class="card-img-top" alt="@article.Title" style="height: 200px; object-fit: cover;" onerror="this.style.display='none'">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="@article.Url" target="_blank" class="text-dark text-decoration-none" rel="noopener noreferrer">
                                    @article.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted flex-grow-1">@article.Description</p>
                            
                            <!-- Summary Section -->
                            <div class="summary-section mb-2" style="display: none;">
                                <div class="alert alert-success mb-0">
                                    <strong>ü§ñ AI Summary:</strong>
                                    <p class="summary-content mb-0 mt-2"></p>
                                </div>
                            </div>
                            
                            <!-- Fact Check Section -->
                            <div class="fact-check-section mb-2" style="display: none;">
                                <div class="alert alert-warning mb-0">
                                    <strong>üîç Fact Check:</strong>
                                    <div class="fact-check-content mt-2"></div>
                                </div>
                            </div>
                            
                            <div class="mt-auto">
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-success summarise-btn" data-url="@article.Url" data-summary-type="comprehensive">
                                            ‚ú® Summarise
                                        </button>
                                        <button type="button" class="btn btn-sm btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="visually-hidden">Toggle</span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item summary-type-select" href="#" data-type="comprehensive">üìù Comprehensive</a></li>
                                            <li><a class="dropdown-item summary-type-select" href="#" data-type="concise">‚ö° Concise</a></li>
                                        </ul>
                                    </div>
                                    <button class="btn btn-sm btn-warning fact-check-btn" data-title="@article.Title" data-description="@article.Description">
                                        üîç Fact Check
                                    </button>
                                </div>
                                <a href="@article.Url" target="_blank" class="btn btn-sm btn-outline-primary" rel="noopener noreferrer">
                                    Read Full Article ‚Üí
                                </a>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">
                                <strong>@article.Source</strong> ‚Ä¢ @article.PublishedAt.ToString("MMM dd, h:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
    }
    
    .card-title a:hover {
        color: #0d6efd !important;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle summary type selection
            document.querySelectorAll('.summary-type-select').forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    const summaryType = this.dataset.type;
                    const btnGroup = this.closest('.btn-group');
                    const btn = btnGroup.querySelector('.summarise-btn');
                    btn.dataset.summaryType = summaryType;
                });
            });

            // Summarise buttons
            document.querySelectorAll('.summarise-btn').forEach(button => {
                button.addEventListener('click', async function() {
                    const originalText = this.innerHTML;
                    const articleUrl = this.dataset.url;
                    const summaryType = this.dataset.summaryType || 'comprehensive';
                    const card = this.closest('.card-body');
                    const summarySection = card.querySelector('.summary-section');
                    const summaryContent = card.querySelector('.summary-content');
                    
                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Generating...';
                    
                    try {
                        const response = await fetch('/Articles/SummariseTrendingArticle', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ url: articleUrl, summaryType: summaryType })
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            summaryContent.textContent = result.summary;
                            summarySection.style.display = 'block';
                            this.innerHTML = '‚úì Summary Generated';
                            this.classList.remove('btn-success');
                            this.classList.add('btn-outline-success');
                        } else {
                            alert('Error: ' + (result.error || 'Failed to generate summary'));
                            this.innerHTML = originalText;
                            this.disabled = false;
                        }
                    } catch (error) {
                        alert('Error generating summary: ' + error.message);
                        this.innerHTML = originalText;
                        this.disabled = false;
                    }
                });
            });

            // Fact check buttons
            document.querySelectorAll('.fact-check-btn').forEach(button => {
                button.addEventListener('click', async function() {
                    const originalText = this.innerHTML;
                    const title = this.dataset.title;
                    const description = this.dataset.description;
                    const card = this.closest('.card-body');
                    const factCheckSection = card.querySelector('.fact-check-section');
                    const factCheckContent = card.querySelector('.fact-check-content');
                    
                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Checking...';
                    
                    try {
                        const response = await fetch('/FactCheck/CheckArticle', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ articleText: title + ' ' + description })
                        });
                        
                        const results = await response.json();
                        
                        if (results && results.length > 0) {
                            let html = '<div class="small">';
                            results.forEach((result, index) => {
                                const ratingClass = result.textualRating?.toLowerCase().includes('false') ? 'danger' : 
                                                  result.textualRating?.toLowerCase().includes('true') ? 'success' : 'warning';
                                
                                html += `
                                    <div class="mb-2 pb-2 ${index < results.length - 1 ? 'border-bottom' : ''}">
                                        <div class="mb-1">
                                            ${result.textualRating ? `<span class="badge bg-${ratingClass}">${result.textualRating}</span>` : ''}
                                            ${result.source ? `<span class="badge bg-info ms-1">${result.source}</span>` : ''}
                                        </div>
                                        <p class="mb-1"><strong>${result.claim || 'Claim ' + (index + 1)}</strong></p>
                                        ${result.reasoning ? `<p class="mb-1">${result.reasoning}</p>` : ''}
                                        ${result.url ? `<a href="${result.url}" target="_blank" class="btn btn-sm btn-outline-primary">Read More</a>` : ''}
                                    </div>
                                `;
                            });
                            html += '</div>';
                            factCheckContent.innerHTML = html;
                            factCheckSection.style.display = 'block';
                            this.innerHTML = '‚úì Fact Checked';
                            this.classList.remove('btn-warning');
                            this.classList.add('btn-outline-warning');
                        } else {
                            factCheckContent.innerHTML = '<p class="text-muted mb-0 small">No fact-checks found for this article.</p>';
                            factCheckSection.style.display = 'block';
                            this.innerHTML = '‚úì No Matches';
                            this.classList.remove('btn-warning');
                            this.classList.add('btn-outline-warning');
                        }
                    } catch (error) {
                        alert('Error fact checking: ' + error.message);
                        this.innerHTML = originalText;
                        this.disabled = false;
                    }
                });
            });
        });
    </script>
}

