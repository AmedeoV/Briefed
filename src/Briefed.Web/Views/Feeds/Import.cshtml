@{
    ViewData["Title"] = "Import Feeds";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">üì• Import Feeds from OPML</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">How to export from Inoreader:</h6>
                        <ol class="mb-0">
                            <li>Go to Inoreader and click on ‚öôÔ∏è <strong>Settings</strong></li>
                            <li>Navigate to <strong>Import/Export</strong> section</li>
                            <li>Click <strong>Export subscriptions as OPML</strong></li>
                            <li>Save the file and upload it here</li>
                        </ol>
                    </div>

                    <form method="post" enctype="multipart/form-data" asp-action="Import" id="importForm">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="opmlFile" class="form-label">Select OPML File</label>
                            <input type="file" 
                                   class="form-control" 
                                   id="opmlFile" 
                                   name="opmlFile" 
                                   accept=".opml,.xml"
                                   required>
                            <div class="form-text">Accepted formats: .opml, .xml</div>
                        </div>

                        <div class="alert alert-warning">
                            <strong>Note:</strong> Feeds you're already subscribed to will be skipped. 
                            New feeds will be added and articles will be fetched in the background.
                            <br><strong>This may take a few minutes depending on the number of feeds.</strong>
                        </div>

                        <!-- Progress indicator -->
                        <div id="progressContainer" style="display: none;" class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span><strong>Importing feeds...</strong></span>
                                <span id="progressText">Please wait</span>
                            </div>
                            <div class="progress">
                                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                                     role="progressbar" style="width: 0%">0%</div>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i> 
                                    Do not close this page until the import is complete.
                                </small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-upload"></i> Import Feeds
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('importForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            const progressContainer = document.getElementById('progressContainer');
            
            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
            
            // Show progress bar
            progressContainer.style.display = 'block';
            
            // Simulate progress (since we can't get real-time updates without WebSockets)
            let progress = 0;
            const interval = setInterval(function() {
                if (progress < 90) {
                    progress += Math.random() * 10;
                    if (progress > 90) progress = 90;
                    document.getElementById('progressBar').style.width = progress + '%';
                    document.getElementById('progressBar').textContent = Math.round(progress) + '%';
                    document.getElementById('progressText').textContent = 'Processing...';
                }
            }, 500);
            
            // Store interval ID so we can clear it if needed
            window.importInterval = interval;
        });
    </script>
}
